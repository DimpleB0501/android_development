<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/merabg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:id="@+id/b1"
        android:layout_marginTop="140dp"
        android:textSize="10sp"
        android:text="button_1" android:textColor="#AA14CC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:id="@+id/b2"
        android:textSize="25sp"
        android:text="button_2" android:textColor="#673AB7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:id="@+id/b3"
        android:text="button_3" android:textColor="#177480"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
    </Button>

    <Button
        android:id="@+id/b4"
        android:text="button_4" android:textColor="#C6774D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

    <TextView
        android:id="@+id/res"
        android:textSize="35sp"
        android:textColor ="#ff0000"
        android:layout_marginLeft="100dp"
        android:text = "sample op"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>