<LinearLayout android:orientation="vertical"
    android:background="#EDE8F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginTop="50dp"
        android:text="Adventure sports"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv1"
            android:src="@mipmap/ic_launcher"
            android:paddingRight="5dp"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv2"
            android:src="@mipmap/ic_launcher"
            android:paddingRight="5dp"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv3"
            android:src="@mipmap/ic_launcher"
            android:paddingRight="5dp"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv4"
            android:paddingRight="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv5"
            android:paddingRight="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv6"
            android:paddingRight="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv7"
            android:paddingRight="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv8"
            android:paddingRight="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv9"
            android:paddingRight="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="125dp"
            android:layout_height="125dp">
        </ImageView>

    </LinearLayout>
</LinearLayout>